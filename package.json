{
  "private": true,
  "name": "@eduzz/houston-workspaces",
  "version": "1.0.13",
  "workspaces": [
    "src/pages/*",
    "src/dev",
    "src"
  ],
  "scripts": {
    "commit": "node ./scripts/git-check-files.js && git-cz",
    "prebuild": "yarn clean",
    "build": "yarn tsc -p .",
    "postbuild": "yarn build:theme",
    "build:theme": "yarn lessc --js ./src/pages/ui-components/ThemeProvider/theme-without-reset.less ./src/pages/ui-components/ThemeProvider/theme-without-reset.css -x",
    "postbuild:theme": "yarn lessc --js ./src/pages/ui-components/ThemeProvider/theme.less ./src/pages/ui-components/ThemeProvider/theme.css -x",
    "build:dev": "yarn swc ./src/pages -d ./src",
    "build:docs": "(cd src && yarn build)",
    "start": "node ./scripts/start.js",
    "start:docs": "concurrently -r \"yarn start:watch\" \"(cd src && yarn start)\"",
    "start:dev": "concurrently -r \"yarn start:watch\" \"(cd src/dev && yarn start)\"",
    "start:watch": "yarn swc ./src/pages -d ./src -w",
    "prepare": "sh ./scripts/prepare.sh",
    "publish": "NPM_AUTH_TOKEN=$NPM_AUTH_TOKEN node ./scripts/publish-all.js",
    "change-version": "node ./scripts/change-version.js",
    "clean": "sh ./scripts/clean.sh",
    "lint": "yarn eslint \"./**/*.ts\" \"./**/*.tsx\" \"./**/*.mdx\"",
    "clean-install": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' + && rm -f yarn.lock && yarn install",
    "pre-commit": "concurrently -r \"yarn lint\" \"yarn tsc -p . --noEmit\"",
    "check-update-deps": "yarn ncu -u",
    "update-deps": "yarn ultra -r --root check-update-deps"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.18.10",
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@faker-js/faker": "^7.4.0",
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.2.239",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "chokidar": "^3.5.3",
    "commitizen": "^4.2.5",
    "concurrently": "^7.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-eslint-plugin": "^5.0.5",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-mdx": "^1.17.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-sonarjs": "^0.15.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "eslint": "^8.22.0",
    "husky": "^8.0.1",
    "inquirer": "^8",
    "npm-check-updates": "^16.0.5",
    "ora": "^5",
    "patch-package": "*",
    "prettier": "^2.7.1",
    "semver": "^7.3.7",
    "typescript": "^4.7",
    "ultra-runner": "^3.10.5"
  },
  "resolutions": {
    "@types/react": "^18",
    "**/@emotion/css": "^11",
    "**/@emotion/react": "^11",
    "**/@emotion/styled": "^11",
    "gatsby-plugin-emotion": "^6",
    "react": "^18",
    "theme-ui": "^0.6",
    "rxjs": "^7"
  }
}
